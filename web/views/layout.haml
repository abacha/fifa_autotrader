    :css
      .text-right { text-align: right; }
      .table-bordered thead th { border: 1px solid #dee2e6; }
      .btn-xs {
        padding: 1px 5px 2px 5px !important;
        font-size: 12px !important;
        line-height: 1.5 !important;
        border-radius: 3px !important;
        margin: 4px !important;
      }
  %body
    %nav.navbar.navbar-dark.sticky-top.bg-dark.p-0
      %a.navbar-brand.col-md-2.mr-0{href: '#'}
        %img.d-inline-block.align-top{src: '/images/FA_logo.png', width: 30, height: 30}
        FIFA Autotrader
    .container-fluid
      .row
        = haml :sidebar
        %main.col-lg-10.col-xl-11.px-4.py-3{role: :main}
          = yield
