- if @player.errors.any?
  = @player.errors.messages

%form.form{method: :post}
  %input{type: :hidden, name: 'player[id]', value: @player.id}
  %input{type: :hidden, name: 'player[status]', value: @player.status}
  %input{type: :hidden, name: 'player[resource_id]', value: @player.resource_id}
  .form-row
    .form-group.col-md-2
      %label Name
      %input.form-control{name: 'player[name]', type: :text, value: @player.name}
    .form-group.col-md-3
      %label Fullname
      %input.form-control{name: 'player[fullname]', type: :text, value: @player.fullname}
    .form-group.col-md-1
      %label Rating
      %input.form-control{name: 'player[rating]', type: :text, value: @player.rating}
    .form-group.col-md-1
      %label Futbin Id
      %input.form-control{name: 'player[futbin_id]', type: :text, value: @player.futbin_id}
    .form-group.col-md-2
      %label Max Bid
      %input.form-control{name: 'player[max_bid]', type: :number, value: @player.max_bid, step: 100}
    .form-group.col-md-2
      %label Sell Value
      %input.form-control{name: 'player[sell_value]', type: :number, value: @player.sell_value, step: 100}
  %button.btn.btn-primary.mb-2{type: :submit} Save

:javascript
  $("input[type='number']").inputSpinner()
